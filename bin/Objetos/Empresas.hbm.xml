<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="Objetos.Empresas" table="empresas">
		<id name="id_Empresa" type="int">
			<column name="id_Empresa" />
			<generator class="increment" />
		</id>
		<property name="Nombre" type="string">
			<column name="Nombre" length="45" not-null="true" />
		</property>
		<property name="Tamaño" type="string">
			<column name="Tamaño" length="45" not-null="true" />
		</property>
		<property name="Pais" type="string">
			<column name="Pais" not-null="true" />
		</property>
		<property name="Capital" type="int">
			<column name="Capital" not-null="true" />
		</property>
		<property name="Director" type="string">
			<column name="Director" not-null="true" />
		</property>
	</class>

</hibernate-mapping>